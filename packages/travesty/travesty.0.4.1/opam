  "ocaml" {>= "4.07"}
  "dune" {build}
  "ppx_deriving"
  "ppx_expect"
  "ppx_jane"
  "ppx_sexp_message"
  "core_kernel" {>= "v0.12" & < "v0.13"}
]
build: ["dune" "build" "-p" name "-j" jobs]
